@model TaskModel

<h2>Delete Task</h2>

<p>Are you sure you want to delete the following Task?</p>

<div>
    <h4>Task Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nama)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nama)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tugas)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tugas)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Deskripsi)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Deskripsi)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TanggalDeadline)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TanggalDeadline)
        </dd>



    </dl>
</div>

<form asp-action="Delete" asp-route-id="@Model.Id">
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
